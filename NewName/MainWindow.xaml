<Window x:Class="NewName.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewName" Height="200" Width="480">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="0,0,0,22">
            <StackPanel Orientation="Horizontal" Margin="11,22,0,22">
                <TextBox Name="tbCaminho" Width="380" Height="22" Margin="0,0,10,0"/>
                <Image Source="../busca.png" PreviewMouseLeftButtonDown="btnDiretorio_PreviewMouseLeftButtonDown"/>
                <!--<Button Name="btnDiretorio" Content="Diretorio" PreviewMouseLeftButtonDown="btnDiretorio_PreviewMouseLeftButtonDown"/>-->
                
            </StackPanel>
            <Button Name="btnMascarar" Width="80" Height="22" Content="Mascarar" Margin="0,0,0,11" PreviewMouseLeftButtonDown="btnMascarar_PreviewMouseLeftButtonDown"/>
            <Button Name="btnDesmascarar" Width="80" Height="22" Content="Desmascarar" PreviewMouseLeftButtonDown="btnDesmascarar_PreviewMouseLeftButtonDown"/>
        </StackPanel>

    </Grid>
</Window>
